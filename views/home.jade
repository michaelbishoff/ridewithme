extends layout

block content
  .container.container-narrow
    each ride in rides
      a.ride-listing-anchor(href="/ride/#{ride.id}")
        .ride-listing.thumbnail
          .row
            .col-xs-12
              .ride-listing-header
                h2 #{ride.get("rideTitle")}
                p.ride-labels
                  if ride.get("difficulty") == 'Easy'
                    #[span.label.label-success #{ride.get("difficulty")}]
                  if ride.get("difficulty") == 'Intermediate'
                    #[span.label.label-warning #{ride.get("difficulty")}]
                  if ride.get("difficulty") == 'Hard'
                    #[span.label.label-danger #{ride.get("difficulty")}]
                  #[span.label.label-default #{ride.get("distance")} km] 
                  #[span.label.label-info #{ride.get("tags")}]
              .ride-listing-content
                hr
                .location
                  p #[strong To:] #{ride.get("to")}
                  p #[strong From:] #{ride.get("from")}
                if ride.get("riders")
                  hr
                  p #[strong Who else is riding?]
                  p
                    each rider in ride.get("riders")
                      img.img-responsive.img-circle(src="#{rider}", style="max-width:50px;margin-right:5px;display:inline-block;")